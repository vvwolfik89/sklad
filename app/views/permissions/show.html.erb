<%= content_for :breadcrumbs do %>
  <li class="crumb-link">
    <%= link_to("Permissions", permissions_path) %>
  </li>
  <li class="crumb-trail">
    <%= @permission.name %>
  </li>
<% end %>

<div class="row">
  <div class="col-md-8">
    <div class="panel">
      <div class="panel-heading">
        <span class="panel-title"><%= @permission.name || "Permission" %></span>
      </div>
      <div class="panel-body form-horizontal">
        <div class="bs-component">
          <div class="panel">
            <div class="panel-heading">
              <ul class="nav panel-tabs-border panel-tabs panel-tabs-left">
                <%= tab_link_for("permission-info", "Permission Info", true) %>
                <%#= tab_link_for("permissions-versions", "Versions") %>
              </ul>
            </div>

            <div class="panel-body">
              <div class="tab-content">
                <%= render("permissions/show/permission_info") %>
                <%#= render("permissions/show/versions") %>
              </div>
            </div>
          </div>
        </div>

        <div class="form-group">

          <div class="mb15">
<!--            <div class="col-sm-offset-3 col-sm-2">-->
              <%#= link_to("Back", permissions_path, class: "btn btn-default btn-block")  %>
<!--            </div>-->
            <% if can?(:edit, @permission) %>
<!--              <div class="col-sm-2">-->
                <%= link_to("Edit", edit_permission_path(@permission), class: "btn btn-primary btn-block") %>
<!--              </div>-->
            <% end %>
            <% if can?(:destroy, @permission) %>
<!--              <div class="col-sm-2">-->
                <%= link_to("Destroy", permission_path(@permission), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-block") %>
<!--              </div>-->
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
