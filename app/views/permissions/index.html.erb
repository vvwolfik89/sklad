<%= content_for :breadcrumbs do %>
  <li class="crumb-trail">
    Permissions
  </li>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <span class="panel-title">
          <span class="fa "></span>Permissions
        </span>
      </div>
      <div class="panel-body pn">
        <div class="bs-component">
          <div class="col-md-6 mt20 mb20">
            <%= link_to("New", new_permission_path, class: "btn btn-primary") if can?(:new, Permission) %>
          </div>
<!--          <div class="col-md-6 text-right">-->
            <%#= paginate @permissions %>
<!--          </div>-->
          <div class="col-md-12">
            <table class="table table-hover table-striped">
              <thead>
              <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Action Name</th>
                <th>Class Name</th>
                <th>Is Active</th>
                <th>Created At</th>
                <th>Actions</th>
              </tr>
              </thead>
              <tbody>
              <% @permissions.each do |permission| %>
                <tr>
                  <td><%= permission.id %></td>
                  <td><%= link_to(permission.name, permission_path(permission)) %></td>
                  <td><%= permission.action_name %></td>
                  <td><%= permission.class_name %></td>
                  <td><%= permission.is_active %></td>
                  <td><%= permission.created_at %></td>
                  <td>
                    <%= link_to("Edit", edit_permission_path(permission), class: "btn btn-sm btn-default") if can?(:edit, permission) %>
                    <%= link_to("Destroy", permission_path(permission), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-danger") if can?(:destroy, permission) %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>

<!--          <div class="col-md-12 text-right">-->
            <%#= paginate @permissions %>
<!--          </div>-->
        </div>
      </div>
    </div>
  </div>
</div>
