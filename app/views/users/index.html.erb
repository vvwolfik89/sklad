  <h1>Users</h1>
  <%= link_to 'New User', new_user_path %>
  <div>
    <div>
      <table class="table  table-striped">
        <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">body</th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><a href="<%= user_path(user) %>">
              <h5> <%= user.email %></h5>
            </a></td>
            <td><%= user.role %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
