<div>
  <div>
    <div>
      <h1><%= @department.title %></h1>
      <p><%= @department.body %></p>
      <% @department.users.each do |user| %>
        <p>
          <%= link_to(user.full_name, user_path(user), class: "col-sm-4") %>
        </p>
      <% end %>
    </div>
  </div>
  <div>
    <%= link_to 'View all dots', departments_path %>
    <%= link_to 'Edit', edit_department_path(@department)%>
    <%= link_to "Destroy", department_path(@department), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
    } %>
  </div>
</div>