<%= content_for :breadcrumbs do %>
    <li class="crumb-link">
      <%= link_to("Roles", roles_path) %>
    </li>
    <li class="crumb-trail">
      <%= @role.title %>
    </li>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <span class="panel-title"><%= @role.title %></span>
        <%#= panel_help_desk_link_helper('panel-role-main') %>
      </div>
      <div class="panel-body">
        <form class="form-horizontal" role="form">
          <div class="bs-component">
            <div class="panel">
              <h5 class="card-title"><%= @role.description %></h5>
              <p class="card-text"><%= I18n.t("activerecord.attributes.role.role_types.#{@role.role_type}") %></p>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-2">
              <%= link_to("Back", roles_path, class: "btn btn-default btn-block") %>
            </div>
            <% if can?(:edit, @role) %>
                <div class="col-sm-2">
                  <%= link_to("Edit", edit_role_path(@role), class: "btn btn-primary btn-block") %>
                </div>
            <% end %>
            <% if can?(:destroy, @role) %>
                <div class="col-sm-2">
                  <%= link_to("Destroy", role_path(@role), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-block") %>
                </div>
            <% end %>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
