<div class="row">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <span class="panel-title">
          Car Registers
        </span>
      </div>
      <div class="panel-body pn">
        <div class="bs-component">
          <div class="">
            <%= link_to("New", new_registers_car_inspection_path, class: "btn btn-primary") %>
            <div class="col-md-12 head_rotate" style="overflow:auto;">
              <table class="table table-hover table-striped">
                <%= render partial: "table_head" %>
                <tbody>
                <% @car_inspections.each do |cr| %>
                  <tr>
                    <td><%= cr.car.registration_number %></td>
                    <td><%= boolean_badge_check(cr.inspect_lighting) %></td>
                    <td><%= boolean_badge_check(cr.steering_check) %></td>
                    <td><%= boolean_badge_check(cr.tire_condition) %></td>
                    <td><%= boolean_badge_check(cr.body_condition) %></td>
                    <td><%= boolean_badge_check(cr.checking_brake) %></td>
                    <td><%= boolean_badge_check(cr.checking_windshield) %></td>
                    <td><%= boolean_badge_check(cr.checking_termoking) %></td>
                    <td><%= boolean_badge_check(cr.checking_termotrans) %></td>
                    <td><%= boolean_badge_check(cr.checking_unitess) %></td>
                    <td><%= cr.notes %></td>
                    <td><%= cr.created_at.strftime("%d.%m.%Y") %></td>
                    <td><%= cr.user.full_name %></td>
                    <td>
                      <%= link_to("Edit", edit_registers_car_inspection_path(cr), class: "btn btn-sm btn-default") if can?(:edit, cr) %>
                      <%= link_to("Destroy", registers_car_inspections_path(cr), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-danger") if can?(:destroy, cr) %>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>

            <!--          <div class="col-md-12 text-right">-->
            <%#= paginate @roles %>
            <!--          </div>-->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
